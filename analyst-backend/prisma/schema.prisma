generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String    @id @default(uuid())
  email           String    @unique
  passwordHash    String    @map("password_hash")
  fullName        String?   @map("full_name")
  isVerified      Boolean   @default(false) @map("is_verified")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")
  lastLogin       DateTime? @map("last_login")
  
  preferences      UserPreference?
  dashboards       Dashboard[]
  prompts          Prompt[]
  dataSources      DataSource[]
  sharedDashboards DashboardShare[]

  @@map("users")
}

model UserPreference {
  id                    String  @id @default(uuid())
  userId                String  @unique @map("user_id")
  theme                 String  @default("light")
  defaultChartType      String? @map("default_chart_type")
  timezone              String  @default("UTC")
  notificationsEnabled  Boolean @default(true) @map("notifications_enabled")
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_preferences")
}

model Dashboard {
  id            String   @id @default(uuid())
  userId        String   @map("user_id")
  title         String
  description   String?
  promptUsed    String?  @map("prompt_used") @db.Text
  configuration Json
  isPublic      Boolean  @default(false) @map("is_public")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")
  
  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  shares      DashboardShare[]
  prompts     Prompt[]
  dataSources DataSource[]
  versions    DashboardVersion[]

  @@map("dashboards")
}

model DashboardVersion {
  id              String   @id @default(uuid())
  dashboardId     String   @map("dashboard_id")
  versionNumber   Int      @map("version_number")
  title           String
  description     String?
  configuration   Json
  commitMessage   String?  @map("commit_message")
  createdByUserId String   @map("created_by_user_id")
  createdByEmail  String   @map("created_by_email")
  createdAt       DateTime @default(now()) @map("created_at")
  
  dashboard Dashboard @relation(fields: [dashboardId], references: [id], onDelete: Cascade)

  @@unique([dashboardId, versionNumber])
  @@index([dashboardId])
  @@index([createdAt])
  @@map("dashboard_versions")
}

model Prompt {
  id              String    @id @default(uuid())
  userId          String    @map("user_id")
  promptText      String    @map("prompt_text") @db.Text
  dashboardId     String?   @map("dashboard_id")
  status          String    @default("pending")
  processingTime  Int?      @map("processing_time")
  errorMessage    String?   @map("error_message") @db.Text
  createdAt       DateTime  @default(now()) @map("created_at")
  
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  dashboard Dashboard? @relation(fields: [dashboardId], references: [id], onDelete: SetNull)

  @@map("prompts")
}

model DataSource {
  id               String   @id @default(uuid())
  userId           String   @map("user_id")
  dashboardId      String?  @map("dashboard_id")
  name             String
  type             String   @default("csv")
  schema           Json?
  data             Json?    // Store the actual data rows
  rowCount         Int?     @map("row_count")
  connectionConfig Json?    @map("connection_config")
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")
  
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  dashboard Dashboard? @relation(fields: [dashboardId], references: [id], onDelete: Cascade)

  @@map("data_sources")
}

model DashboardShare {
  id               String   @id @default(uuid())
  dashboardId      String   @map("dashboard_id")
  sharedByUserId   String   @map("shared_by_user_id")
  sharedWithEmail  String   @map("shared_with_email")
  sharedWithUserId String?  @map("shared_with_user_id")
  permissionLevel  String   @default("view") // view, edit, admin
  createdAt        DateTime @default(now()) @map("created_at")
  expiresAt        DateTime? @map("expires_at")
  
  dashboard    Dashboard @relation(fields: [dashboardId], references: [id], onDelete: Cascade)
  sharedByUser User      @relation(fields: [sharedByUserId], references: [id], onDelete: Cascade)

  @@unique([dashboardId, sharedWithEmail])
  @@map("dashboard_shares")
}

model AuditLog {
  id            String   @id @default(uuid())
  dashboardId   String   @map("dashboard_id")
  userId        String   @map("user_id")
  userEmail     String   @map("user_email")
  action        String   // create, update, delete, share, unshare, view
  details       Json?    // Additional context about the change
  ipAddress     String?  @map("ip_address")
  userAgent     String?  @map("user_agent")
  createdAt     DateTime @default(now()) @map("created_at")

  @@index([dashboardId])
  @@index([userId])
  @@index([createdAt])
  @@map("audit_logs")
}
